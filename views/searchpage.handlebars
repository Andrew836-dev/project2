{{> navTwo }}

<div class="container">
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s3">
          <input placeholder="Search By School Name or Suburb" id="name-or-suburb" type="text" class="validate">
        </div>

        <div class="input-field col s4">
          <select multiple>
            <option value="" disabled selected>School Type</option>
            <option value="1">Preschool</option>
            <option value="2">Primary</option>
            <option value="3">Secondary</option>
          </select>
        </div>

        <div class="input-field col s4">
          <select multiple>
            <option value="" disabled selected>State</option>
            <option value="1">SA</option>
            <option value="2">VIC</option>
            <option value="3">NSW</option>
            <option value="4">QLD</option>
            <option value="5">ACT</option>
            <option value="6">WA</option>
            <option value="7">TAS</option>
            <option value="8">NT</option>
          </select>
        </div>

        <div class="col s1" style="margin-top: 25px;">
          <a href="#"><i class="small material-icons">search</i></a>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col S12 m3">
      <ul class="collection with-header">
        <li class="collection-header">
          <h5>Your School List</h5>
        </li>
        <li>
          <a href="#!" class="collection-item black-text">Adelaide High School
            <p>Type: <span class="school-type">Secondary</span></p>
            <p>State: <span class="school-type">SA</span></p>
          </a>
        </li>
        <li>
          <a href="#!" class="collection-item black-text">Parkside Primary School
            <p>Type: <span class="school-type">Primary</span></p>
            <p>State: <span class="school-type">SA</span></p>
          </a>
        </li>
        <li>
          <a href="#!" class="collection-item black-text">Glenunga International High School
            <p>Type: <span class="school-type">Secondary</span></p>
            <p>State: <span class="school-type">SA</span></p>
          </a>
        </li>
      </ul>
    </div>
    <div class="col s12 m9">
      {{> map }}
    </div>
  </div>
</div>

